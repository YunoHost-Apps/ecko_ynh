{
    "name": "Ecko",
    "id": "ecko",
    "packaging_format": 1,
    "description": {
        "en": "Dynamic fork of Mastodon's federated social network",
        "fr": "Fork dynamique du réseau social fédéré de Mastodon"
    },
    "version": "2022.12.04~ynh1",
    "url": "https://github.com/magicstone-dev/ecko",
    "upstream": {
        "license": "AGPL-3.0-or-later",
        "website": "https://magicstone.dev",
        "code": "https://github.com/magicstone-dev/ecko"
    },
    "license": "AGPL-3.0-or-later",
    "maintainer": {
        "name": "weex"
    },
    "requirements": {
        "yunohost": ">= 11.0.9"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true,
                "help": {
                    "en": "Ecko needs to be public if any level of federation (posts, follows) is to be enabled.",
                    "fr": "Ecko doit être public si n'importe quel niveau de fédération (posts, follow) doit être activé."
                }
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": [
                    "en_EN",
                    "fr_FR"
                ],
                "default": "fr_FR"
            }
        ]
    }
}
